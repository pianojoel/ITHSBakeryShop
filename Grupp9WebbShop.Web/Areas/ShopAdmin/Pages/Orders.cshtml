@page
@model Grupp9WebbShop.Web.Areas.ShopAdmin.Pages.OrdersModel
@{
}
<div class="brownandthin w-100">
    <h1>Orderhantering</h1>
<table class="table" style="color: #642714;">
    <thead class="thead">
        <tr>
            <th>Id</th>
            <th>Datum</th>
           
            <th>Avslutat ärende</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td><a asp-page="/OrderDetails" asp-route-OrderId="@order.Id">@order.Id</a></td>
                <td><a asp-page="/OrderDetails" asp-route-OrderId="@order.Id">@order.Date</a></td>
               
                <td>@(order.IsProcessed ? "Ja":"Nej")</td>
            </tr>
        }
    </tbody>
</table>
<p>
    @if (Model.ShowNotProcessedOrders)
    {
        <a asp-route-ShowNotProcessedOrders="false">Visa alla ordrar</a>
    }
    else
    {
        <a asp-route-ShowNotProcessedOrders="true">Visa endast ej avslutade ärenden</a>
    }
</p>
</div>