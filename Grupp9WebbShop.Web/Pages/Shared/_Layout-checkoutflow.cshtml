        </div>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderSection("Steps", false)
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <nav class="navbar navbar-expand navbar-light ">
                <div class="container-fluid navstyles">


                    <ul class="navbar-nav me-auto nav-fill w-100" style="line-height:initial">

                        <li class="nav-item checkout-p">
                            <a asp-page="/About">Om oss</a>
                        </li>
                        <li class="divider"></li>
                        <li class="nav-item checkout-p">
                            <a asp-page="/Contact">Kontakt</a>
                        </li>
                        <li class="divider"></li>
                        <li class="nav-item checkout-p">
                            <a asp-page="/Privacy">Integritetspolicy</a>
                        </li>





                    </ul>
                </div>

            </nav>
            <div class="row flex-nowrap align-items-center">
                <div class="col-3">
                    <img style="width:100px" src="~/images/Logo.png" alt="Logga" />
                </div>
                <div class="col-5 d-none d-md-block">
                    <h3>Följ oss på sociala medier!</h3>
                </div>
                <div class="col-4 p-3">
                    <a href="http://www.facebook.com"><img width="50" src="~/images/Facebook_ikon.png" /></a>
                    <a href="http://www.instagram.com"><img width="50" src="~/images/Instagram_ikon.png" /></a>
                    <a href="http://www.snapchat.com"><img width="50" src="~/images/Snapchat_ikon.png" /></a>
                    <a href="http://www.pinterest.com"><img width="50" src="~/images/Pinterest_ikon.png" /></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $(".dropdown").hover(function () {
                var dropdownMenu = $(this).children(".dropdown-menu");
                if (dropdownMenu.is(":visible")) {
                    dropdownMenu.parent().toggleClass("open");
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
