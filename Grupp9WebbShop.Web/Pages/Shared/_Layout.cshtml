@using Grupp9WebbShop.Web.Helpers
<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Grupp 9 Webbshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="container">
            <div class="text-center">
                <a href="/Index">
                    <img style="width:200px" src="~/images/Logo.png" />
                </a>
            </div>
            <div class="searchbox">


                <form class="form-inline">
                    <input class="searchstyle form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <img width ="25"src="~/images/searchicon.png" />
                    <button style="visibility:hidden" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>


            </div>
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid navstyles">

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            @*@foreach (var cat in Model.Categories)
                        {


                            <li class="nav-item">
                                <a class="nav-link" asp-route-categoryID="@cat.Id">@cat.Name</a>
                            </li>
                        }*@



                            <li class="nav-item">
                                <a class="nav-link" asp-route-categoryID=1>Färdiga Paket</a>
                            </li>
                            <li class="divider"></li>
                            <li class="nav-item">
                                <a class="nav-link" asp-route-categoryID=1>Bygg din egen tårta</a>
                            </li>



                        </ul>

                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <img style="width:100px" src="~/images/Logo.png" />

                <h3 class="centertext">Följ oss på sociala medier!</h3>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
